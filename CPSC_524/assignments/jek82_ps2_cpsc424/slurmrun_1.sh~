#!/bin/bash

#SBATCH --partition=day
#SBATCH --reservation=cpsc424
#SBATCH --cpus-per-task=24
#SBATCH --nodes=1
#SBATCH --ntasks=1
#SBATCH --time=4:00:00
#SBATCH --mem-per-cpu=7G
#SBATCH --job-name=MandelbrotFinalTest
#SBATCH --output=%x-%j.out

# Load Required Modules

module load intel
module list

# Set side length, h, and number of iterations, N. Save into tmp.txt.
h=0.001
N=25000
echo $N > tmp.txt
echo $h >> tmp.txt

# Task 1

make clean
echo "make mandseq"
make mandseq

echo ""
echo ""
echo "Serial version"

for i in {1..3}
do
    echo "Run "$i":"
    cat tmp.txt | ./mandseq
    echo ""
done
